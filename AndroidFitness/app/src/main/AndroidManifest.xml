<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidfitness">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidFitness2">
        <activity
            android:name=".Macronutrients_UpdateActivity"
            android:exported="false"
            android:label="Update data"
            android:parentActivityName=".Macronutrients_Activity"/>
        <activity
            android:name=".Macronutrients_AddActivity"
            android:exported="false"
            android:label="Add Macro Data"
            android:parentActivityName=".Macronutrients_Activity" />
        <activity
            android:name=".Macronutrients_Activity"
            android:exported="false"
            android:label="Macronutrient"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Steps_UpdateActivity"
            android:exported="false"
            android:parentActivityName=".Steps_Activity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Steps_AddActivity"
            android:exported="false"
            android:label="Add Steps to recycler view"
            android:parentActivityName=".Steps_Activity" />
        <activity
            android:name=".Steps_Activity"
            android:exported="false"
            android:label="Steps"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>