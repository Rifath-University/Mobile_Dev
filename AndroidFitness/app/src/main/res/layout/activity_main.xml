<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userinterface.MainActivity">

    <Button
        android:id="@+id/steps"
        android:layout_width="348dp"
        android:layout_height="108dp"
        android:layout_marginTop="24dp"
        android:onClick="buttonToStepsActivity"
        android:text="@string/stepsActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <Button
        android:id="@+id/macroBtn"
        android:layout_width="348dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonToMacroActivity"
        android:text="@string/macronutrientsActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/steps"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <Button
        android:id="@+id/micro_Btn"
        android:layout_width="348dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonToMicroActivity"
        android:text="@string/micronutrientsActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/macroBtn"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <Button
        android:id="@+id/sleep_Btn"
        android:layout_width="348dp"
        android:layout_height="108dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonToSleepActivity"
        android:text="@string/sleepActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micro_Btn"
        tools:ignore="OnClick,UsingOnClickInXml" />

    <Button
        android:id="@+id/locationBtn"
        android:layout_width="344dp"
        android:layout_height="101dp"
        android:layout_marginTop="8dp"
        android:text="Location"
        android:onClick="buttonToLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleep_Btn" />

</androidx.constraintlayout.widget.ConstraintLayout>