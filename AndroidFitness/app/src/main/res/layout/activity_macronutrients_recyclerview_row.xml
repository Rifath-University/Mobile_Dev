<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/macroMainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/macroConstraintLayout"
            android:padding="12dp">

                <TextView
                    android:id="@+id/macro_id_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="40sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/protein_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Protein"
                app:layout_constraintStart_toEndOf="@+id/macro_id_text"
                app:layout_constraintTop_toTopOf="@+id/macro_id_text" />

            <TextView
                android:id="@+id/protein_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="protein"
                app:layout_constraintBottom_toBottomOf="@+id/macro_id_text"
                app:layout_constraintStart_toEndOf="@+id/macro_id_text" />

            <TextView
                android:id="@+id/fat_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Fat"
                app:layout_constraintStart_toEndOf="@+id/protein_lbl"
                app:layout_constraintTop_toTopOf="@+id/protein_lbl" />

            <TextView
                android:id="@+id/fat_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fat"
                app:layout_constraintBottom_toBottomOf="@+id/protein_data"
                app:layout_constraintStart_toStartOf="@+id/fat_lbl" />

            <TextView
                android:id="@+id/carbs_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Carbs"
                app:layout_constraintStart_toEndOf="@+id/fat_lbl"
                app:layout_constraintTop_toTopOf="@+id/fat_lbl" />

            <TextView
                android:id="@+id/carbs_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carbs"
                app:layout_constraintBottom_toBottomOf="@+id/fat_data"
                app:layout_constraintStart_toStartOf="@+id/carbs_lbl" />

            <TextView
                android:id="@+id/fibre_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Fibre"
                app:layout_constraintStart_toEndOf="@+id/carbs_lbl"
                app:layout_constraintTop_toTopOf="@+id/carbs_lbl" />

            <TextView
                android:id="@+id/fibre_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fibre"
                app:layout_constraintBottom_toBottomOf="@+id/carbs_data"
                app:layout_constraintStart_toStartOf="@+id/fibre_lbl" />

            <TextView
                android:id="@+id/salt_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Salt"
                app:layout_constraintStart_toEndOf="@+id/fibre_lbl"
                app:layout_constraintTop_toTopOf="@+id/fibre_lbl" />

            <TextView
                android:id="@+id/salt_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salt"
                app:layout_constraintBottom_toBottomOf="@+id/fibre_data"
                app:layout_constraintStart_toStartOf="@+id/salt_lbl" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>